<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="Blizzard_TradeSkillTemplates.lua"/>

	<Button name="OptionalReagentButtonTemplate" inherits="LargeItemButtonTemplate" mixin="OptionalReagentButtonMixin" motionScriptsWhileDisabled="true" virtual="true">
		<Layers>
			<Layer level="Border">
				<FontString parentKey="EffectText" inherits="GameFontGreenSmall" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-4" y="2"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Button>

</Ui>
