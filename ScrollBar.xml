<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="ScrollBar.lua"/>

	<Frame name="ScrollBarTemplate" mixin="ScrollBarMixin" inherits="ScrollControllerTemplate" virtual="true"/>

	<Button name="ScrollBarButton" mixin="ScrollBarButtonMixin" enableMouse="true" intrinsic="true">
		<Scripts>
			<OnLoad method="OnLoad_Intrinsic"/>
			<OnMouseUp method="OnMouseUp_Intrinsic"/>
			<OnMouseDown method="OnMouseDown_Intrinsic"/>
			<OnEnter method="OnEnter_Intrinsic"/>
			<OnLeave method="OnLeave_Intrinsic"/>
		</Scripts>
	</Button>
</Ui>