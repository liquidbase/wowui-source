<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<Script file="CovenantCallings.lua"/>

	<Frame name="CovenantCallingQuestTemplate" mixin="CovenantCallingQuestMixin" virtual="true">
		<Size x="54" y="54"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Icon">
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>
					<Size x="128" y="128"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Highlight" alphaMode="ADD" alpha="0.5" hidden="true">
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Bang">
					<Size x="16" y="16"/>
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>
					<Anchors>
						<Anchor point="LEFT" x="0" y="10"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>

	<Frame name="CovenantCallingsTemplate" inherits="ResizeLayoutFrame" mixin="CovenantCallingsMixin" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="TrackerBackground">
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>
					<Size x="1" y="30"/>
					<Anchors>
						<Anchor point="LEFT" x="4"/>
						<Anchor point="RIGHT"/>
					</Anchors>
					<Color color="BLACK_FONT_COLOR" a="0.80"/>
				</Texture>
				<Texture parentKey="RightSideSpacer">
					<Size x="30" y="1"/>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>
</Ui>